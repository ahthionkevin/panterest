{% extends 'base.html.twig' %}

{% block title %} {{ pin.getTitle() }}{% endblock %}

{% block body %}
    <p>
        <a href="{{ path('app_home') }}">Go back</a> | 
        <a href="{{ path('app_pin_edit',{id:pin.id}) }}">Edit</a> | 
        <a href="#" onclick="event.preventDefault(); confirm('Are you Sure') && document.getElementById('is-pin-delete-form').submit();">Delete</a>
    </p>
    <h1>{{ pin.getTitle() }}</h1>
    <p>{{ pin.getDescription() }}</p>

    <form id="is-pin-delete-form"  method="POST" action=" {{ path('app_pin_delete',{id:pin.id})}} " style="display:none">
        <input type="hidden" value="{{ csrf_token('pins.deletion') ~ pin.id }}"
        <input type="hidden" name="_method" value="DELETE">
    </form>


{% endblock %}