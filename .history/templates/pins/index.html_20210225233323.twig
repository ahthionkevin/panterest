{% extends 'base.html.twig' %}

{% block title %}Find All Pins Here!{% endblock %}

{% block body %}
    <h1>{{ pluralize(pins|length,'Pin','Pins') }}</h1>

    {% for pin in pins %}
        <article>
            <h2><a href="{{ path('app_pin_show',{id:pin.getId()})}}">{{ pin.getTitle() }}</a></h2>
            <p>{{ pin.getDescription()|u.truncate(10) }}</p>
        </article>
    {% endfor %}
{% endblock %}
